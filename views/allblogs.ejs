    <div class="container">

      <div class="row">
        <% blogs.forEach(function(blog) { %>
          <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-xs-12">
            <div class="card mx-auto" style="width: 18rem; background-color: black; color: #fbf8dd;">
              <img  style="width: 286px !important; height: 180px !important;" src="<%= blog.blogImage %>" class="card-img-top"  alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= blog.blogheading %></h5>
                <p class="card-text">
                  <% if (blog.blogText) { %>
                    <%= blog.blogText.substring(0, 20) %>...
                  <% } %>
                </p>
                <a href="<%= '/blogs/' + blog.id %>" class="button2"><span style="text-decoration: none !important;">Read More</span></a>
              </div>
            </div>
          </div>
        <% }); %>
